{
  "name": "todo-pwa",
  "private": true,
  "type": "module",
  "scripts": {
    "prepare": "npx only-allow pnpm",
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "run-p lint:*",
    "lint:type": "tsc",
    "lint:format": "prettier --check .",
    "lint:eslint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "jest"
  },
  "imports": {
    "#/*": [
      "./src/*",
      "./src/*.ts",
      "./src/*.tsx",
      "./src/*.js",
      "./src/*.jsx",
      "./src/*/index.ts",
      "./src/*/index.tsx",
      "./src/*/index.js",
      "./src/*/index.jsx"
    ]
  },
  "volta": {
    "node": "18.17.1",
    "pnpm": "8.7.0"
  },
  "dependencies": {
    "immer": "^10.0.2",
    "jotai": "^2.4.0",
    "jotai-immer": "^0.2.0",
    "luxon": "^3.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "uuid": "^9.0.0",
    "valibot": "^0.12.0",
    "workbox-core": "^7.0.0",
    "workbox-precaching": "^7.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.4",
    "@types/luxon": "^3.3.1",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@types/uuid": "^9.0.3",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "@vitejs/plugin-react": "^4.0.4",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "jest": "^29.6.4",
    "jest-environment-jsdom": "^29.6.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6",
    "vite": "^4.4.9",
    "vite-plugin-pwa": "^0.16.4"
  }
}
